@model VIMS.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";

}


<div class="col-lg-6 d-flex align-items-center justify-content-center">
    <div class="auth-form-transparent text-left p-3">
        <div class="brand-logo">
            <h1 style="font-family:Pacifico">Vims</h1>

        </div>
        <h4>
            Oops !! You forgot your password.<br />
        </h4>
        <h5>
            Don't worry just head to the link sent to your email
        </h5>
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Code)
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                <div class="input-group">
                    <div class="input-group-prepend bg-transparent">
                        <span class="input-group-text bg-transparent border-right-0">
                            <i class="mdi mdi-account-outline text-dark"><i class="fa fa-user" aria-hidden="true"></i></i>
                        </span>
                    </div>
                    @Html.TextBoxFor(m => m.Email, htmlAttributes: new { @class = "form-control form-control-lg border-left-0", placeholder = "Email" })

                </div>
                <small class="form-text text-muted">Required. Email format someone@@something.com.</small>


            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                <div class="input-group">
                    <div class="input-group-prepend bg-transparent">
                        <span class="input-group-text bg-transparent border-right-0">
                            <i class="mdi mdi-account-outline text-dark"><i class="fa fa-lock" aria-hidden="true"></i></i>
                        </span>
                    </div>
                    @Html.TextBoxFor(m => m.Password, htmlAttributes: new { @class = "form-control form-control-lg border-left-0", placeholder = "Password" })

                </div>
                <small class="form-text text-muted">Required. Email format someone@@something.com.</small>

            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword)
                <div class="input-group">
                    <div class="input-group-prepend bg-transparent">
                        <span class="input-group-text bg-transparent border-right-0">
                            <i class="mdi mdi-account-outline text-dark"><i class="fa fa-user" aria-hidden="true"></i></i>
                        </span>
                    </div>
                    @Html.TextBoxFor(m => m.ConfirmPassword, htmlAttributes: new { @class = "form-control form-control-lg border-left-0", placeholder = "Confirm Password" })

                </div>
                <small class="form-text text-muted">Required. Email format someone@@something.com.</small>


            </div>

            <br />
            <div class="form-group">
                <input type="submit" class="btn btn-dark w-100 btn-lg" value="Reset" />
            </div>
        }



    </div>
</div>
<div class="col-lg-6 login-half-bg d-flex flex-row shadow-lg" style="background-image: url(../../Content/images/auth/evgeny-tchebotarev-aiwuLjLPFnU-unsplash.jpg);">
    <p class="text-white font-weight-medium text-center flex-grow align-self-end">Copyright &copy; 2018  All rights reserved.</p>
</div>


