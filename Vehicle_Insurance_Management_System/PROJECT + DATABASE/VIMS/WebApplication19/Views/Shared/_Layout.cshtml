                                <span class="menu-title">Home</span>
                            </a>
                        </li>
                        @if (User.IsInRole("Employee"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/Dashboard">
                                    <i class="mdi mdi-view-dashboard-outline menu-icon"><i class="fa fa-desktop text-dark" aria-hidden="true"></i></i>
                                    <span class="menu-title">Dashboard</span>
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" href="/Manage/">
                                <i class="mdi mdi-view-dashboard-outline menu-icon"><i class="fa fa-user text-dark" aria-hidden="true"></i></i>
                                <span class="menu-title">My Account</span>
                            </a>
                        </li>
                       
                        <li class="nav-item">
                            <a href="/PolicyTypes/" class="nav-link">
                                <i class="mdi mdi-image-filter menu-icon"><i class="fa fa-money text-dark" aria-hidden="true"></i></i>
                                <span class="menu-title">Types of Insurance</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Home/Contact/" class="nav-link">
                                <i class="mdi mdi-image-filter menu-icon"><i class="fa fa-phone text-dark" aria-hidden="true"></i></i>
                                <span class="menu-title">Contact US</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Home/About/" class="nav-link">
                                <i class="mdi mdi-file-document-box-outline menu-icon"><i class="fa fa-info text-dark" aria-hidden="true"></i></i>
                                <span class="menu-title">About Us</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Home/SiteMap/" class="nav-link">
                                <i class="mdi mdi-file-document-box-outline menu-icon">
                                    <i class="fa fa-map-marker text-dark"
                                       aria-hidden="true"></i>
                                </i>
                                <span class="menu-title">Site Map</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>

        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <div class="main-panel">
                <div class="content-wrapper">

                    @RenderBody()



                </div>
                <!-- content-wrapper ends -->
                <!-- partial:partials/_footer.html -->
                <footer class="footer">
                    <div class="w-100 clearfix">
                        <span class="text-muted d-block text-center text-sm-left d-sm-inline-block text-dark">
                            <i class="fas fa-copyright float-left mr-2" style="font-size:18px;"></i> Copyright © 2018 <a href="/" target="_blank">VIMS</a>. All rights reserved.
                        </span>
                        <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center text-dark">
                            <i class="fas fa-car-crash mr-2" style="font-size:20px;"></i> Vehicle Insurance Management System
                        </span>
                    </div>
                </footer>
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    @Scripts.Render("~/bundles/jquery")

    @RenderSection("scripts", required: false)
</body>
</html>
