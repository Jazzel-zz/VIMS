@model IEnumerable<VIMS.Models.Expense>

@{
    ViewBag.Title = "Index";
}

<div class="card shadow-lg">
    <div class="card-body">
        <div class="row">
            <div class="col-10">
                <h2 style="font-family:Pacifico">Expenses</h2>
            </div>
            <div class="col-2">
                <p class="float-right">
                    <a href="/Expenses/Create/" class="btn btn-dark"><i class="fas fa-plus"></i></a>
                </p>
            </div>
        </div>
       <br />
        <table class="table table-hover table-bordered">
            <tr class="thead-dark">
                <th>
                    @Html.DisplayNameFor(model => model.DateOfExpense)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TypeOfExpense)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AmountOfExpense)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfExpense)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TypeOfExpense)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AmountOfExpense)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ExpenseId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ExpenseId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ExpenseId })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>