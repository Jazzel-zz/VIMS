@model VIMS.Models.Expense

@{
    ViewBag.Title = "Create";
}

<div class="card shadow-lg">
    <div class="card-body">
        <h1 style="font-family:Pacifico">Add Expense</h1>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.DateOfExpense, htmlAttributes: new { @class = "control-label col-12" })
            <div class="col-12">
                @Html.EditorFor(model => model.DateOfExpense, new { htmlAttributes = new { @class = "form-control", @id = "datepicker" } })
                @Html.ValidationMessageFor(model => model.DateOfExpense, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TypeOfExpense, htmlAttributes: new { @class = "control-label col-12" })
            <div class="col-12">
                @Html.EditorFor(model => model.TypeOfExpense, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TypeOfExpense, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group d-none">
            @Html.LabelFor(model => model.ApplicationUserId, htmlAttributes: new { @class = "control-label col-12" })
            <div class="col-12">
                @Html.DropDownList("ApplicationUserId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ApplicationUserId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AmountOfExpense, htmlAttributes: new { @class = "control-label col-12" })
            <div class="col-12">
                @Html.EditorFor(model => model.AmountOfExpense, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AmountOfExpense, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-12">
                <input type="submit" value="Create" class="btn btn-dark btn-lg w-100" />
            </div>
        </div>
    </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var $j = jQuery.noConflict();
            $j("#datepicker").datepicker();
        });

    </script>
}