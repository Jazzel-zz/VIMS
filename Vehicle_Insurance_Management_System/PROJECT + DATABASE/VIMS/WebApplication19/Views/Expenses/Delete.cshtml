@model VIMS.Models.Expense

@{
    ViewBag.Title = "Delete";
}

<div class="card shadow-lg">
    <div class="card-body">
        <div class="card mt-3 shadow">
            <div class="card-body">
                <h1 style="font-family:Pacifico">Delete Expense Details</h1>
                <h3 class="mt-3">Are you sure you want to delete this?</h3>
            </div>
        </div>
        <div class="card mt-3 shadow">
            <div class="card-body">
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.DateOfExpense):
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DateOfExpense)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.TypeOfExpense):
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TypeOfExpense)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.AmountOfExpense):
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.AmountOfExpense)
                        </dd>
                        <dt>
                            Added By:
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ApplicationUser.Name)

                        </dd>

                    </dl>
                </div>

            </div>
        </div>
        <div class="card mt-3 shadow">
            <div class="card-body">
                <div>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-danger" /> |
                            @Html.ActionLink("Back to List", "Index")
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
   
</div>

