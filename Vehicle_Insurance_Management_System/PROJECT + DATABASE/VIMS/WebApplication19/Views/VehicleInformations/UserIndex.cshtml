@model IEnumerable<VIMS.Models.VehicleInformation>

@{
    ViewBag.Title = "UserIndex";
}


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <form>
                            <div class="form-group d-flex">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <input class="form-control" type="text" id="search" name="search" value="@ViewBag.Search" placeholder="Search">
                                    <button class="btn btn-primary ml-3" type="submit">Search</button>

                                }
                            </div>
                        </form>
                    </div>
                    <div class="col-12 mb-5">
                        <h2>Search Result For<u class="ml-2">"@ViewBag.Search"</u></h2>
                        <p class="text-muted">About 12,100 results (0.52 seconds)</p>
                    </div>
                    @if (Model.Count() == 0)
                    {
                        <div class="col-12 results">
                            <div class="card">
                                <div class="card-body">
                                    <p class="text-center h3">Oops! No vehicles found with this name.</p>
                                </div>
                            </div>
                        </div>

                    }
                    else
                    {
                        foreach (Model.VehicleImages)
                        {
                            <div class="col-12 results">
                                <div class="card shadow-lg" style="width:100% !important;">
                                    <div class="card-body">

                                        <div class="row">
                                            <div class="col-4">
                                                @foreach (var image in data)
                                                {
                                                    <img class="card-img-top border" src="@image" alt="">
                                                    break;
                                                }
                                            </div>
                                            <div class="col-8">
                                                <br />
                                                <a class="text-dark" href='Details/@item.VehicleInformationId'><h4 class="card-title" style="font-family:Pacifico; font-size:30px;">#@item.VehicleInformationId : @item.VehicleName</h4></a>
                                                <br />
                                                <div class="row" style="font-family:'Century Gothic';font-size:18px;">
                                                    <div class="col">
                                                        <p class="card-text">
                                                            @*Owner : @item.ApplicationUser.Name*@
                                                            <br />
                                                            Rate : $ @item.VehicleRate
                                                        </p>
                                                    </div>

                                                    <div class="col">
                                                        <p class="card-text">
                                                            Model : @item.VehicleModel
                                                            <br />
                                                            Engine Number : @item.VehicleEngineNumber
                                                            <br />
                                                            Body Number : @item.VehicleBodyNumber
                                                            <br />

                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        }
                    }

                    <nav class="col-12" aria-label="Page navigation">
                        <ul class="pagination mt-5">
                            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                            <li class="page-item  active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">Next</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
        </div>
<!-- content-wrapper ends -->
