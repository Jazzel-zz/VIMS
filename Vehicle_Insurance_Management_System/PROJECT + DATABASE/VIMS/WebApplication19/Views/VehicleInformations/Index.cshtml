@model IEnumerable<VIMS.Models.VehicleInformation>

@{
    ViewBag.Title = "Index";
}

<div class="card shadow-lg">
    <div class="card-body">

        <div class="row">
            <div class="col">
                <h2>Vehicles</h2>
            </div>
            <div class="col">
                <p>
                    <a href="/VehicleInformations/Create/" class="btn btn-dark float-right"><i class="fa fa-plus" aria-hidden="true"></i></a>
                </p>
            </div>
        </div>

        <br />
        <table class="table table-bordered table-hover shadow">
            <tr class="thead-dark">
                <th>
                    @Html.DisplayNameFor(model => model.VehicleName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ApplicationUser.Name)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.VehicleColor)
                    </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.VehicleModel)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.VehicleVersion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VehicleRate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VehicleBodyNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VehicleEngineNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VehicleNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VehicleDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VehicleReview)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VehicleStatus)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.isActive)
                    </th>*@
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.VehicleName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApplicationUser.Name)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.VehicleColor)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.VehicleModel)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.VehicleVersion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VehicleRate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VehicleBodyNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VehicleEngineNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VehicleNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VehicleDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VehicleReview)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.VehicleStatus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.isActive)
                        </td>*@
                    @using Microsoft.AspNet.Identity;


                    @if (User.Identity.GetUserId() == item.ApplicationUserId)
                    {
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.VehicleInformationId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.VehicleInformationId }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.VehicleInformationId })
                        </td>
                    }
                    else
                    {
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = item.VehicleInformationId })
                        </td>

                    }

                </tr>
            }

        </table>
    </div>
</div>