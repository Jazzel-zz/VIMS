@model VIMS.Models.Contact
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<div class="bg-dark">
    <br />
    <br />
    <br />
    <br />
</div>

<!-- Breadcrumb -->
<div class="breadcrumb-area" data-bgimage="../../../Scripts/assets/images/bg/breadcrumb-bg-1.jpg" style="background-image:url('../../../Scripts/assets/images/bg/breadcrumb-bg-1.jpg')" data-black-overlay="4">
    <div class="container">
        <div class="in-breadcrumb">
            <div class="row align-items-center">
                <div class="col">
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li>Contact</li>
                    </ul>
                </div>
                <div class="col">
                    <h6>Contact</h6>
                </div>
            </div>
        </div>
    </div>
</div>
<!--// Breadcrumb -->
<!-- Page Conttent -->
<main class="page-content">

    <!-- Contact Area -->
    <div class="contact-area in-section section-padding-lg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="section-title text-center">
                        <h6>CONTACT US AT ANY TIME</h6>
                        <h2>Contact Us</h2>
                    </div>
                </div>
            </div>
            <div class="row">

                <div class="col-lg-12">
                    <!-- contact-form-warp Start -->
                    <div class="contact-form-warp">
                        @if (ViewBag.Success != "")
                        {
                            <div class="alert alert-success">
                                <strong>Success !</strong>dsadasd
                            </div>
                        }
                        @*<div class="alert alert-success">
                            <strong>Success !</strong>dsadasd
                        </div>*@
                        <form id="contact-form">

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <div class="row">
                                    <div class="col-lg-6 col-md-6">
                                        <div class="input-box">
                                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "", @name = "", @required = "required", placeholder = "First Name *" } })
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6">
                                        <div class="input-box">
                                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "", @name = "", @required = "required", placeholder = "Last Name *" } })

                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6">
                                        <div class="input-box">
                                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "", @name = "", @required = "required", placeholder = "Email *" } })

                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-6">
                                        <div class="input-box">
                                            @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "", @name = "", @required = "required", placeholder = "Phone *" } })

                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="input-box">
                                            @Html.TextAreaFor(model => model.Message, new { @class = "", @name = "", @required = "required", placeholder = "Your Message *" })
                                        </div>
                                    </div>
                                </div>
                                <div class="contact-submit-btn text-center">
                                    <input type="submit" class="btn btn-rounded btn-dark" value="Submit Now" />
                                </div>
                            }

                        </form>
                    </div>
                    <!-- contact-form-warp End -->
                </div>

            </div>

        </div>
    </div>
    <!--// Services Area -->

</main>
<!--// Page Conttent -->