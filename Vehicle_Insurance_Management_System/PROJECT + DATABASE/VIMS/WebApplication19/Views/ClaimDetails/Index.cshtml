@model IEnumerable<VIMS.Models.ClaimDetail>

@{
    ViewBag.Title = "Index";
}

<div class="card shadow-lg">
    <div class="card-body">
        <h2 style="font-family:Pacifico">Claims</h2>
        <br />
        <table class="table table-hover table-bordered">
            <tr class="thead-dark">
                <th>
                    Id
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClaimNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerPolicyRecord.ApplicationUser.Name)
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClaimDetailId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClaimNumber)
                    </td>
                    <td>
                        by @Html.DisplayFor(modelItem => item.ApplicationUser.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.ClaimDetailId })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>